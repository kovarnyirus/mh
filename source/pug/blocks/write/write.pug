mixin write-wrapper(params)
	// start write
	+b.SECTION.write
		.container
			+e.top-wrapper
				+e.H2.title!= params.title
				if params.subtitle
					+e.subtitle!= params.subtitle
			+e.img-wrapper
				+e.IMG.img(src='img/' + params.img)
			+e.FORM.form-wrapper
				block
				+e.agreement Нажимая на кнопку, вы даете согласие на обработку персональных данных

mixin write-1()
	- var params = {title: 'Запишитесь на <span class="accent">  индивидуальный разбор,  </span>  чтобы увеличить продажи в вашем бизнесе', img: 'form-decor-1.svg' }
	+write-wrapper(params)
		label.label
			input.input.input--phone(type='text' placeholder='Номер телефона WhatsApp')
		button.btn.btn-send записаться на разбор

mixin write-2()
	- var params = {title: 'Укажите с какой проблемой вы столкнулись в вашем бизнесе и <span class="accent">  получите список готовых решений  </span> в виде PDF-файлов.', subtitle: 'PDF отправим в Ваш WhatsApp', img: 'form-decor-2.svg'}
